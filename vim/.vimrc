" Indentation
filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab

" power line
set laststatus=2
set rtp+=$HOME/.local/lib/python2.7/site-packages/powerline/bindings/vim/
set t_Co=256

" Highlight column 80
set colorcolumn=80

" Syntax highlighting
syntax enable
set background=dark

" Misc
set number
